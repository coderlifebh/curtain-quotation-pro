{
  "main": "main.cjs",
  "name": "curtain-quotation-pro",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "desktop": "electron .",
    "electron-pack": "electron-builder",
    "electron-pack-publish": "electron-builder --publish=always",
    "preelectron-pack": "npm run build"
  },
  "dependencies": {
    "@google/generative-ai": "latest",
    "better-sqlite3": "^12.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "electron": "^37.3.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.coderlifebh.curtain-quotation-pro",
    "productName": "Curtain Quotation Pro",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "database.cjs",
      "simpleDatabase.cjs",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "coderlifebh",
      "repo": "curtain-quotation-pro"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/simple-icon-512x512.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
